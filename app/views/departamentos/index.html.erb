<p style="color: green"><%= notice %></p>

<h1 >Departamentos</h1>

<table class="table table-bordered table-hover" id="departamentos">
  <thead>
  <tr>
    <th>Nome
    </th>
    <th colspan="3"></th>
  </tr></thead>
  <tbody>
  <% @departamentos.each do |departamento| %>
 <tr>
   <td>
    <%= render departamento %></td>
   <td>
     <%= link_to "Ver Produtos", departamento, class:"btn btn-default" %>
   </td>
    <td>
      <%= link_to "Editar",edit_departamento_path(departamento), class:"btn btn-default" %>
    </td>
   <td>
     <%= button_to "Deletar", @departamento, method: :delete,  class:"btn btn-danger",   data:{confirm:"Tem certa que deseja remover #{departamento.nome}?"} %>

   </td>
 </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Novo departamento", new_departamento_path, class:"btn btn-primary" %>
